<Window
    Background="#f8f9fa"
    Height="600"
    Title="Revit MSI Builder"
    Width="900"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="RevitMsiBuilder.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitMsiBuilder"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <!--  File Selection  -->
        <Border
            Background="White"
            BorderBrush="#ccc"
            BorderThickness="1"
            CornerRadius="8"
            Grid.Row="0"
            Margin="0,0,0,10"
            Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button
                    Click="BrowseButton_Click"
                    Height="30"
                    Margin="0,0,10,0"
                    Width="120">
                    📂 Browse .addin
                </Button>
                <TextBlock
                    FontSize="14"
                    Foreground="#555"
                    Text="No file selected"
                    VerticalAlignment="Center"
                    x:Name="SelectedPathText" />
            </StackPanel>
        </Border>

        <!--  Revit Version Selection  -->
        <Border
            Background="White"
            BorderBrush="#ccc"
            BorderThickness="1"
            CornerRadius="8"
            Grid.Row="1"
            Margin="0,0,0,10"
            Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Label
                    Content="Revit Version:"
                    FontWeight="Bold"
                    VerticalAlignment="Center" />
                <ComboBox
                    Margin="10,0,0,0"
                    SelectionChanged="RevitVersionComboBox_SelectionChanged"
                    Width="160"
                    x:Name="RevitVersionComboBox" />
            </StackPanel>
        </Border>

        <!--  Files DataGrid  -->
        <Border
            Background="White"
            BorderBrush="#ccc"
            BorderThickness="1"
            CornerRadius="8"
            Grid.Row="2"
            Margin="0,0,0,10"
            Padding="5">
            <DataGrid
                AlternatingRowBackground="#f0f0f0"
                AutoGenerateColumns="False"
                CanUserResizeRows="False"
                GridLinesVisibility="None"
                HeadersVisibility="Column"
                IsReadOnly="True"
                RowBackground="#fafafa"
                x:Name="FilesDataGrid">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding FileName}"
                        Header="File Name"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding FilePath}"
                        Header="Path"
                        Width="2*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!--  Deploy Button  -->
        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Right"
            Margin="0,0,0,10"
            Orientation="Horizontal">
            <Button
                Background="#0078D4"
                BorderBrush="#005A9E"
                Click="DeployButton_Click"
                Content="🚀 Deploy MSI"
                FontWeight="Bold"
                Foreground="White"
                Height="35"
                Width="120" />
        </StackPanel>

        <!--  Log Console  -->
        <Border
            Background="#1e1e1e"
            BorderBrush="#444"
            BorderThickness="1"
            CornerRadius="8"
            Grid.Row="4"
            Padding="5">
            <TextBox
                AcceptsReturn="True"
                AcceptsTab="True"
                Background="#1e1e1e"
                FontFamily="Consolas"
                FontSize="12"
                Foreground="#d4d4d4"
                HorizontalScrollBarVisibility="Auto"
                IsReadOnly="True"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto"
                x:Name="LogConsole" />
        </Border>
    </Grid>
</Window>
