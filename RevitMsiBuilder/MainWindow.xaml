<Window
    x:Class="RevitMsiBuilder.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:RevitMsiBuilder.ViewModels"
    Title="Revit MSI Builder"
    Width="950"
    Height="800"
    MinWidth="800"
    MinHeight="600"
    d:DataContext="{d:DesignInstance viewModels:MainViewModel,
                                     IsDesignTimeCreatable=True}"
    Background="#f8f9fa"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">



    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="220" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock
                Margin="0,0,0,8"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#333"
                Text="Revit MSI Builder" />
            <TextBlock
                Margin="0,0,0,10"
                FontSize="14"
                Foreground="#666"
                Text="Create and deploy MSI packages for your Revit add-ins" />
            <Separator Height="1" Background="#e0e0e0" />
        </StackPanel>

        <!--  Main Content Area  -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  File Selection  -->
            <Border
                Grid.Column="0"
                Margin="0,0,10,0"
                Style="{StaticResource CardContainer}">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,12"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#333"
                        Text="Select Add-in File" />
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Button
                            Width="150"
                            Height="36"
                            Command="{Binding BrowseForAddinFileCommand}"
                            Style="{StaticResource ModernButton}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,8,0"
                                    FontSize="14"
                                    Text="📂" />
                                <TextBlock FontSize="13" Text="Browse .addin" />
                            </StackPanel>
                        </Button>
                        <Border
                            Width="310"
                            Margin="10,0,0,0"
                            Padding="10,8"
                            Background="#f9f9f9"
                            BorderBrush="#e0e0e0"
                            BorderThickness="1"
                            CornerRadius="4">
                            <TextBlock
                                x:Name="SelectedPathText"
                                VerticalAlignment="Center"
                                FontSize="13"
                                Foreground="#555"
                                Text="{Binding CurrentAddinFile.FilePath, TargetNullValue='No file selected'}"
                                TextTrimming="CharacterEllipsis" />
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  Revit Version Selection  -->
            <Border
                Grid.Column="1"
                Margin="10,0,0,0"
                Style="{StaticResource CardContainer}">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,12"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#333"
                        Text="Revit Version" />
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Foreground="#555"
                            Text="Select version:" />
                        <ComboBox
                            x:Name="RevitVersionComboBox"
                            Width="200"
                            ItemsSource="{Binding RevitVersions}"
                            SelectedItem="{Binding SelectedRevitVersion}"
                            Style="{StaticResource ModernComboBox}" />
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="#888"
                            Text="(Required)" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!--  Files DataGrid  -->
        <Border
            Grid.Row="2"
            Margin="0,0,0,15"
            Style="{StaticResource CardContainer}">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#333"
                        Text="Included Files" />
                    <TextBlock
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Foreground="#666"
                        Text="Files that will be included in the MSI package" />
                </Grid>
                <DataGrid
                    x:Name="FilesDataGrid"
                    MaxHeight="350"
                    AutoGenerateColumns="False"
                    ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                    IsReadOnly="True"
                    ItemsSource="{Binding Files}"
                    Style="{StaticResource ModernDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding FileName}"
                            Header="File Name">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="8,0" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            Width="2*"
                            Binding="{Binding FilePath}"
                            Header="Path">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="8,0" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Width="100" Header="Status">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="8,4"
                                        Padding="8,3"
                                        HorizontalAlignment="Left"
                                        Background="#e6f7e6"
                                        CornerRadius="4">
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="#2e8b57"
                                            Text="✓ Ready" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!--  Actions Bar  -->
        <Border
            Grid.Row="3"
            Margin="0,0,0,15"
            Padding="16,12"
            Style="{StaticResource CardContainer}">
            <Grid>
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                    <CheckBox
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"
                        Content="Compress file .msi"
                        IsChecked="{Binding IsCompressMsi}"
                        IsEnabled="True" />
                    <CheckBox
                        VerticalAlignment="Center"
                        Content="Install for all users"
                        IsChecked="{Binding IsInstallForAllUsers}"
                        IsEnabled="True"
                        ToolTip="Installation will be available for all users on this computer" />



                    <Button
                        Width="100"
                        Height="36"
                        Margin="20,0,0,0"
                        Command="{Binding BrowseFolderCommand}"
                        Style="{StaticResource ModernButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,8,0"
                                FontSize="14"
                                Text="📂" />
                            <TextBlock FontSize="13" Text="Output" />
                        </StackPanel>
                    </Button>
                    <Border
                        Width="310"
                        Margin="10,0,0,0"
                        Padding="10,8"
                        Background="#f9f9f9"
                        BorderBrush="#e0e0e0"
                        BorderThickness="1"
                        CornerRadius="4">
                        <TextBlock
                            x:Name="outputSelectedPath"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Foreground="#555"
                            Text="{Binding SelectedFolderPath, TargetNullValue='No folder selected'}"
                            TextTrimming="CharacterEllipsis" />
                    </Border>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <!--  <Button  -->
                    <!--  Background="#6c757d"  -->
                    <!--  Content="Save Configuration"  -->
                    <!--  Margin="0,0,10,0"  -->
                    <!--  Style="{StaticResource ModernButton}"  -->
                    <!--  Width="130" />  -->
                    <Button
                        x:Name="DeployButton"
                        Width="130"
                        Command="{Binding DeployAddinCommand}"
                        Style="{StaticResource ModernButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,8,0"
                                FontSize="14"
                                Text="🚀" />
                            <TextBlock FontSize="13" Text="Deploy MSI" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Log Console  -->
        <Border
            Grid.Row="4"
            Background="#f8f9fa"
            Style="{StaticResource CardContainer}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="#333"
                        Text="Build Log" />
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            Width="60"
                            Height="24"
                            Padding="0"
                            Background="#6c757d"
                            Command="{Binding ClearLogBuildMsiCommand}"
                            Content="Clear"
                            FontSize="11"
                            Style="{StaticResource ModernButton}" />
                        <Button
                            Width="60"
                            Height="24"
                            Margin="8,0,0,0"
                            Padding="0"
                            Background="#6c757d"
                            Command="{Binding CopyLogBuildMsiCommand}"
                            Content="Copy"
                            FontSize="11"
                            Style="{StaticResource ModernButton}" />
                    </StackPanel>
                </Grid>

                <Border
                    Grid.Row="1"
                    Background="#1e1e1e"
                    BorderBrush="#444"
                    BorderThickness="1"
                    CornerRadius="4">
                    <TextBox
                        x:Name="LogConsole"
                        Padding="10"
                        AcceptsReturn="True"
                        AcceptsTab="True"
                        Background="#1e1e1e"
                        BorderThickness="0"
                        FontFamily="Consolas"
                        FontSize="12"
                        Foreground="#d4d4d4"
                        HorizontalScrollBarVisibility="Auto"
                        IsReadOnly="True"
                        Text="{Binding LogOutput, Mode=OneWay}"
                        TextWrapping="NoWrap"
                        VerticalScrollBarVisibility="Auto" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>