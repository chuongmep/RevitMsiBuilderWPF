<Window
    Background="#f8f9fa"
    Height="800"
    MinHeight="600"
    MinWidth="800"
    Title="Revit MSI Builder"
    Width="950"
    WindowStartupLocation="CenterScreen"
    d:DataContext="{d:DesignInstance viewModels:MainViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d"
    x:Class="RevitMsiBuilder.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:RevitMsiBuilder.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Resources>
        <!--  Button Style  -->
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#0078D4" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#005A9E" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                Margin="{TemplateBinding Padding}"
                                VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE" />
                                <Setter Property="BorderBrush" Value="#005A9E" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E" />
                                <Setter Property="BorderBrush" Value="#004578" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  ComboBox Style  -->
        <Style TargetType="ComboBox" x:Key="ModernComboBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#d1d1d1" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <!--  DataGrid Style  -->
        <Style TargetType="DataGrid" x:Key="ModernDataGrid">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#d1d1d1" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="RowBackground" Value="White" />
            <Setter Property="AlternatingRowBackground" Value="#f5f5f5" />
            <Setter Property="HorizontalGridLinesBrush" Value="#e0e0e0" />
            <Setter Property="VerticalGridLinesBrush" Value="#e0e0e0" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="RowHeight" Value="32" />
        </Style>

        <!--  DataGrid Column Header Style  -->
        <Style TargetType="DataGridColumnHeader" x:Key="DataGridColumnHeaderStyle">
            <Setter Property="Background" Value="#f0f0f0" />
            <Setter Property="Foreground" Value="#333" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="BorderBrush" Value="#e0e0e0" />
        </Style>

        <!--  Card Container Style  -->
        <Style TargetType="Border" x:Key="CardContainer">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#e0e0e0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="8"
                        Color="#000000"
                        Opacity="0.1"
                        ShadowDepth="1" />
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="220" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Foreground="#333"
                Margin="0,0,0,8"
                Text="Revit MSI Builder" />
            <TextBlock
                FontSize="14"
                Foreground="#666"
                Margin="0,0,0,10"
                Text="Create and deploy MSI packages for your Revit add-ins" />
            <Separator Background="#e0e0e0" Height="1" />
        </StackPanel>

        <!--  Main Content Area  -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  File Selection  -->
            <Border
                Grid.Column="0"
                Margin="0,0,10,0"
                Style="{StaticResource CardContainer}">
                <StackPanel>
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#333"
                        Margin="0,0,0,12"
                        Text="Select Add-in File" />
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Button
                            Command="{Binding BrowseCommand}"
                            Height="36"
                            Style="{StaticResource ModernButton}"
                            Width="150">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    FontSize="14"
                                    Margin="0,0,8,0"
                                    Text="📂" />
                                <TextBlock FontSize="13" Text="Browse .addin" />
                            </StackPanel>
                        </Button>
                        <Border
                            Background="#f9f9f9"
                            BorderBrush="#e0e0e0"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="10,0,0,0"
                            Padding="10,8"
                            Width="310">
                            <TextBlock
                                FontSize="13"
                                Foreground="#555"
                                Text="{Binding CurrentAddinFile.FilePath, TargetNullValue='No file selected'}"
                                TextTrimming="CharacterEllipsis"
                                VerticalAlignment="Center"
                                x:Name="SelectedPathText" />
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  Revit Version Selection  -->
            <Border
                Grid.Column="1"
                Margin="10,0,0,0"
                Style="{StaticResource CardContainer}">
                <StackPanel>
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#333"
                        Margin="0,0,0,12"
                        Text="Revit Version" />
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="13"
                            Foreground="#555"
                            Margin="0,0,10,0"
                            Text="Select version:"
                            VerticalAlignment="Center" />
                        <ComboBox
                            ItemsSource="{Binding RevitVersions}"
                            SelectedItem="{Binding SelectedRevitVersion}"
                            Style="{StaticResource ModernComboBox}"
                            Width="200"
                            x:Name="RevitVersionComboBox" />
                        <TextBlock
                            FontSize="12"
                            Foreground="#888"
                            Margin="10,0,0,0"
                            Text="(Required)"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!--  Files DataGrid  -->
        <Border
            Grid.Row="2"
            Margin="0,0,0,15"
            Style="{StaticResource CardContainer}">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#333"
                        Text="Included Files" />
                    <TextBlock
                        FontSize="12"
                        Foreground="#666"
                        HorizontalAlignment="Right"
                        Text="Files that will be included in the MSI package"
                        VerticalAlignment="Center" />
                </Grid>
                <DataGrid
                    AutoGenerateColumns="False"
                    ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                    IsReadOnly="True"
                    ItemsSource="{Binding Files}"
                    MaxHeight="350"
                    Style="{StaticResource ModernDataGrid}"
                    x:Name="FilesDataGrid">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Binding="{Binding FileName}"
                            Header="File Name"
                            Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="8,0" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            Binding="{Binding FilePath}"
                            Header="Path"
                            Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="8,0" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Status" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Background="#e6f7e6"
                                        CornerRadius="4"
                                        HorizontalAlignment="Left"
                                        Margin="8,4"
                                        Padding="8,3">
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="#2e8b57"
                                            Text="✓ Ready" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!--  Actions Bar  -->
        <Border
            Grid.Row="3"
            Margin="0,0,0,15"
            Padding="16,12"
            Style="{StaticResource CardContainer}">
            <Grid>
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                    <CheckBox
                        Content="Compress file .msi"
                        IsChecked="True"
                        IsEnabled="False"
                        Margin="0,0,20,0"
                        VerticalAlignment="Center" />
                    <CheckBox
                        Content="Install for all users"
                        IsChecked="{Binding IsInstallForAllUsers}"
                        IsEnabled="True"
                        ToolTip="Installation will be available for all users on this computer"
                        VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <!--  <Button  -->
                    <!--  Background="#6c757d"  -->
                    <!--  Content="Save Configuration"  -->
                    <!--  Margin="0,0,10,0"  -->
                    <!--  Style="{StaticResource ModernButton}"  -->
                    <!--  Width="130" />  -->
                    <Button
                        Command="{Binding DeployCommand}"
                        Style="{StaticResource ModernButton}"
                        Width="130"
                        x:Name="DeployButton">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                FontSize="14"
                                Margin="0,0,8,0"
                                Text="🚀" />
                            <TextBlock FontSize="13" Text="Deploy MSI" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Log Console  -->
        <Border
            Background="#f8f9fa"
            Grid.Row="4"
            Style="{StaticResource CardContainer}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="#333"
                        Text="Build Log" />
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            Background="#6c757d"
                            Command="{Binding ClearLogCommand}"
                            Content="Clear"
                            FontSize="11"
                            Height="24"
                            Padding="0"
                            Style="{StaticResource ModernButton}"
                            Width="60" />
                        <Button
                            Background="#6c757d"
                            Command="{Binding CopyLogCommand}"
                            Content="Copy"
                            FontSize="11"
                            Height="24"
                            Margin="8,0,0,0"
                            Padding="0"
                            Style="{StaticResource ModernButton}"
                            Width="60" />
                    </StackPanel>
                </Grid>

                <Border
                    Background="#1e1e1e"
                    BorderBrush="#444"
                    BorderThickness="1"
                    CornerRadius="4"
                    Grid.Row="1">
                    <TextBox
                        AcceptsReturn="True"
                        AcceptsTab="True"
                        Background="#1e1e1e"
                        BorderThickness="0"
                        FontFamily="Consolas"
                        FontSize="12"
                        Foreground="#d4d4d4"
                        HorizontalScrollBarVisibility="Auto"
                        IsReadOnly="True"
                        Padding="10"
                        Text="{Binding LogOutput, Mode=OneWay}"
                        TextWrapping="NoWrap"
                        VerticalScrollBarVisibility="Auto"
                        x:Name="LogConsole" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>